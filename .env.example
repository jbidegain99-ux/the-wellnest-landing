# Database
DATABASE_URL="postgresql://username:password@localhost:5432/thewellnest"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Stripe (for payments)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Email (Microsoft 365 SMTP - for password reset and notifications)
SMTP_HOST="smtp.office365.com"
SMTP_PORT="587"
SMTP_USER="contact@wellneststudio.net"
SMTP_PASS="your-microsoft-365-password"

# Test Mode for Checkout (set to "true" to simulate payments without Stripe)
WELLNEST_TEST_CHECKOUT="true"

# ========================================
# PayWay One (Banco Cuscatlan) Configuration
# ========================================

# Environment: TEST or PROD
PAYWAY_ENV="TEST"

# Base URLs
PAYWAY_BASE_URL_TEST="https://test.payway.sv"
PAYWAY_BASE_URL_PROD="https://payway.sv"

# Authentication Token (merchant authentication - passed to client)
PAYWAY_TOKEN_AUTH="your_auth_token_here"

# Encryption Token (AES-256-CBC key - NEVER expose to client)
PAYWAY_TOKEN_ENCRYPT="your_encryption_token_here"

# Merchant Configuration
PAYWAY_RETAILER_OWNER="your_retailer_owner_id"
PAYWAY_USER_OPERATION="your_user_operation_id"

# Callback URL base (must be publicly accessible from PayWay servers)
# This should be your production domain, e.g., https://wellnest.com
PAYWAY_CALLBACK_PUBLIC_BASE_URL="https://your-domain.com"