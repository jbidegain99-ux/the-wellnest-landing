generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Usuario
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String
  phone         String?
  birthDate     DateTime?
  gender        String?
  height        Float?    // en metros
  weight        Float?    // en kg
  profileImage  String?
  qrCode        String    @unique @default(cuid())
  role          Role      @default(USER)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  purchases        Purchase[]
  reservations     Reservation[]
  waitlist         Waitlist[]
  paymentMethods   PaymentMethod[]
  accounts         Account[]
  sessions         Session[]
  promoRedemptions PromoRedemption[]
  refundRequests   RefundRequest[]
  referralsGiven   Referral[] @relation("ReferrerRelation")
  referralsUsed    Referral[] @relation("ReferredRelation")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  ADMIN
}

// Disciplina
model Discipline {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String  @db.Text
  benefits    String  @db.Text
  image       String?
  icon        String?
  order       Int     @default(0)
  isActive    Boolean @default(true)

  classes  Class[]
  packages PackageDiscipline[]
}

// Instructor
model Instructor {
  id          String   @id @default(cuid())
  name        String
  headline    String?  @db.Text // Ej: "Nutricionista · Especialidad en Nutrición Deportiva · Maestra de Yoga"
  bio         String   @db.Text // Descripción larga (legacy)
  shortBio    String?  @db.Text // Bio corta para cards públicas
  tags        String[] // Lista de tags: ["Yoga", "Nutrición", "Nutrición Deportiva"]
  image       String?
  disciplines String[] // disciplinas que imparte (para horarios)
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  classes Class[]
}

// Paquete de clases
model Package {
  id               String   @id @default(cuid())
  slug             String?  // Slug estable para referencias (ej: "drop-in-class") - nullable for legacy packages
  name             String
  subtitle         String?  // Línea breve (ej: "Ideal para fluir a tu propio ritmo")
  shortDescription String   // Legacy - mantener para compatibilidad
  fullDescription  String   @db.Text // Descripción completa
  classCount       Int      // número de clases
  price            Float
  currency         String   @default("USD")
  validityDays     Int      // días de vigencia
  validityText     String?  // Texto alternativo (ej: "Vigencia trimestral")
  bulletsTop       String[] // Lista ✓ inicial (ej: ["1 clase", "5 días de vigencia"])
  bulletsBottom    String[] // Lista ✓ final (beneficios/condiciones)
  image            String?
  isActive         Boolean  @default(true)
  isFeatured       Boolean  @default(false)
  order            Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  disciplines PackageDiscipline[]
  purchases   Purchase[]
}

// Relación paquete-disciplina (qué disciplinas cubre cada paquete)
model PackageDiscipline {
  id           String     @id @default(cuid())
  package      Package    @relation(fields: [packageId], references: [id], onDelete: Cascade)
  packageId    String
  discipline   Discipline @relation(fields: [disciplineId], references: [id], onDelete: Cascade)
  disciplineId String

  @@unique([packageId, disciplineId])
}

// Compra de paquete
model Purchase {
  id               String         @id @default(cuid())
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
  package          Package        @relation(fields: [packageId], references: [id])
  packageId        String
  classesRemaining Int
  expiresAt        DateTime
  discountCode     String?
  originalPrice    Float
  finalPrice       Float
  status           PurchaseStatus @default(ACTIVE)
  stripePaymentId  String?
  createdAt        DateTime       @default(now())

  reservations     Reservation[]
  promoRedemptions PromoRedemption[]
  refundRequests   RefundRequest[]
  referrals        Referral[]
}

enum PurchaseStatus {
  ACTIVE
  EXPIRED
  DEPLETED
}

// Clase programada
model Class {
  id               String      @id @default(cuid())
  discipline       Discipline  @relation(fields: [disciplineId], references: [id])
  disciplineId     String
  instructor       Instructor  @relation(fields: [instructorId], references: [id])
  instructorId     String
  dateTime         DateTime
  duration         Int         // minutos
  maxCapacity      Int
  currentCount     Int         @default(0)
  isRecurring      Boolean     @default(false)
  recurringPattern String?     // weekly, biweekly, etc.
  isCancelled      Boolean     @default(false)
  notes            String?

  reservations Reservation[]
  waitlist     Waitlist[]
}

// Reservación
model Reservation {
  id          String            @id @default(cuid())
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  class       Class             @relation(fields: [classId], references: [id], onDelete: Cascade)
  classId     String
  purchase    Purchase          @relation(fields: [purchaseId], references: [id])
  purchaseId  String
  status      ReservationStatus @default(CONFIRMED)
  createdAt   DateTime          @default(now())
  cancelledAt DateTime?
  checkedIn   Boolean           @default(false)
  checkedInAt DateTime?

  @@unique([userId, classId])
}

enum ReservationStatus {
  CONFIRMED
  CANCELLED
  ATTENDED
  NO_SHOW
}

// Lista de espera
model Waitlist {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  classId   String
  position  Int
  createdAt DateTime @default(now())

  @@unique([userId, classId])
}

// Código de descuento
model DiscountCode {
  id           String    @id @default(cuid())
  code         String    @unique
  percentage   Float     // 0-100
  maxUses      Int?
  currentUses  Int       @default(0)
  validFrom    DateTime
  validUntil   DateTime
  isActive     Boolean   @default(true)
  applicableTo String[]  // package IDs, vacío = todos
  createdAt    DateTime  @default(now())

  redemptions  PromoRedemption[]
}

// Método de pago guardado
model PaymentMethod {
  id                    String  @id @default(cuid())
  user                  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId                String
  type                  String  // card, etc.
  last4                 String
  brand                 String
  expiryMonth           Int
  expiryYear            Int
  isDefault             Boolean @default(false)
  stripePaymentMethodId String
}

// Artículo de blog
model BlogPost {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  content     String     @db.Text
  excerpt     String
  coverImage  String?
  category    String?
  tags        String[]
  status      PostStatus @default(DRAFT)
  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

// Imagen de galería
model GalleryImage {
  id        String   @id @default(cuid())
  url       String
  alt       String
  caption   String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

// Mensaje de contacto
model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Testimonios (fase 2)
model Testimonial {
  id        String   @id @default(cuid())
  name      String
  content   String   @db.Text
  image     String?
  rating    Int      @default(5)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

// Carrito de compras (temporal)
model CartItem {
  id        String   @id @default(cuid())
  sessionId String
  packageId String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([sessionId, packageId])
}

// Preferencias de notificaciones del usuario
model NotificationSettings {
  id                  String   @id @default(cuid())
  userId              String   @unique
  emailReservations   Boolean  @default(true)
  emailReminders      Boolean  @default(true)
  emailPromotions     Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// Brand Assets - Activos visuales configurables desde admin
model BrandAsset {
  id        String   @id @default(cuid())
  key       String   @unique // hero_video_url, discipline_yoga_image_url, etc.
  type      String   // "image" | "video"
  url       String   // URL absoluta o ruta interna
  label     String?  // Nombre legible para el admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ========================================
// NUEVOS MODELOS - MISIÓN CRÍTICA
// ========================================

// A) Registro de uso de códigos promocionales (1 uso por usuario)
model PromoRedemption {
  id             String       @id @default(cuid())
  userId         String
  discountCodeId String
  purchaseId     String?      // Puede ser null si la compra falló
  status         RedemptionStatus @default(APPLIED)
  redeemedAt     DateTime     @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  discountCode DiscountCode @relation(fields: [discountCodeId], references: [id], onDelete: Cascade)
  purchase     Purchase?    @relation(fields: [purchaseId], references: [id], onDelete: SetNull)

  @@unique([userId, discountCodeId]) // Un usuario solo puede usar un código una vez
}

enum RedemptionStatus {
  APPLIED    // Código aplicado exitosamente
  VOID       // Compra cancelada/falló
  REFUNDED   // Reembolsado
}

// C) Sistema de reembolsos
model RefundRequest {
  id              String       @id @default(cuid())
  userId          String
  purchaseId      String
  reservationId   String?      // Si es reembolso por cancelación de clase
  amount          Float
  currency        String       @default("USD")
  eligible        Boolean
  status          RefundStatus @default(PENDING)
  reason          String       // within_policy, outside_policy, class_cancelled, etc.
  policySnapshot  String?      @db.Text // JSON de la política aplicada
  notes           String?      @db.Text
  providerRef     String?      // ID de transacción de pasarela
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  refundedAt      DateTime?
  refundedBy      String?      // Admin user ID que procesó

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  purchase Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([userId])
}

enum RefundStatus {
  PENDING
  PROCESSING
  REFUNDED
  REJECTED
}

// E) Sistema de referidos
model Referral {
  id              String         @id @default(cuid())
  referrerUserId  String         // Usuario que refiere
  referredUserId  String?        // Usuario referido (null hasta que se registre)
  referredEmail   String?        // Email del referido (para tracking antes de registro)
  referralCode    String         // Código usado
  eventType       ReferralEvent  @default(PENDING)
  purchaseId      String?        // Compra que activó el beneficio
  classesEarned   Int            @default(0)
  discountApplied Float?         // Descuento aplicado al referido
  status          ReferralStatus @default(PENDING)
  createdAt       DateTime       @default(now())
  completedAt     DateTime?

  referrer User      @relation("ReferrerRelation", fields: [referrerUserId], references: [id], onDelete: Cascade)
  referred User?     @relation("ReferredRelation", fields: [referredUserId], references: [id], onDelete: SetNull)
  purchase Purchase? @relation(fields: [purchaseId], references: [id], onDelete: SetNull)

  @@index([referrerUserId])
  @@index([referralCode])
}

enum ReferralEvent {
  PENDING   // Código compartido, esperando uso
  SIGNUP    // Usuario se registró con el código
  PURCHASE  // Usuario hizo una compra
}

enum ReferralStatus {
  PENDING    // Esperando acción
  COMPLETED  // Beneficio otorgado
  EXPIRED    // Expiró sin completar
  REVOKED    // Revocado por admin
}

// Configuración del sitio (persistente)
model SiteSettings {
  id                    String   @id @default(cuid())
  key                   String   @unique
  value                 String   @db.Text
  updatedAt             DateTime @updatedAt
}

// Solicitudes de reseteo de contraseña
// Flujo: Usuario solicita → Admin verifica por WhatsApp → Aprueba/Rechaza
model PasswordResetRequest {
  id              String                     @id @default(cuid())
  email           String
  userName        String?                    // Nombre del usuario (si existe en sistema)
  userId          String?                    // ID del usuario (si existe)
  status          PasswordResetRequestStatus @default(PENDING)
  tempPassword    String?                    // Contraseña temporal generada (solo si aprobada)
  adminNotes      String?                    @db.Text // Notas del admin
  processedBy     String?                    // Email/nombre del admin que procesó
  processedAt     DateTime?                  // Fecha de procesamiento
  createdAt       DateTime                   @default(now())
  expiresAt       DateTime                   // Expira después de 24 horas

  @@index([status])
  @@index([email])
}

enum PasswordResetRequestStatus {
  PENDING    // Esperando revisión
  APPROVED   // Aprobada - contraseña reseteada
  REJECTED   // Rechazada
  EXPIRED    // Expirada sin procesar
}
